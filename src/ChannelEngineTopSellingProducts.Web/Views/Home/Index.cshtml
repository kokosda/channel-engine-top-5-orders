@model TopSellingProductsViewModel
@{
	ViewData["Title"] = "Home Page";
}

<div class="text-center">
	<h1>Top Selling Products</h1>
	<table class="table">
		<thead>
		<tr>
			<th>Name</th>
			<th>GTIN</th>
			<th>Total Quantity</th>
		</tr>
		</thead>
		<tbody>
		@foreach (var item in Model.TopSellingProducts)
		{
			<tr>
				<td>@item.Name</td>
				<td>@item.Gtin</td>
				<td>@item.TotalQuantity</td>
			</tr>
		}
		</tbody>
	</table>
</div>